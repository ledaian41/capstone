<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainAdminServlet</servlet-name>
        <servlet-class>hd.controller.MainAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdminServlet</servlet-name>
        <servlet-class>hd.controller.LoginAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAdminServlet</servlet-name>
        <servlet-class>hd.controller.LogoutAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAccountsServlet</servlet-name>
        <servlet-class>hd.controller.LoadAccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAccountInfoServlet</servlet-name>
        <servlet-class>hd.controller.LoadAccountInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetStatusAccountServlet</servlet-name>
        <servlet-class>hd.controller.SetStatusAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadProjectsServlet</servlet-name>
        <servlet-class>hd.controller.LoadProjectsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainAdminServlet</servlet-name>
        <url-pattern>/MainAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdminServlet</servlet-name>
        <url-pattern>/LoginAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAdminServlet</servlet-name>
        <url-pattern>/LogoutAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAccountsServlet</servlet-name>
        <url-pattern>/LoadAccountsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAccountInfoServlet</servlet-name>
        <url-pattern>/LoadAccountInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetStatusAccountServlet</servlet-name>
        <url-pattern>/SetStatusAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadProjectsServlet</servlet-name>
        <url-pattern>/LoadProjectsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
